# Use a specific registry (if needed)
# registry=https://registry.npmjs.org/

# Save exact versions of packages in package.json
save-exact=true

# Set the default script to run when using `npm start`
scripts-prepend-node-path=auto

# Enable or disable optional packages (if needed)
optional=false

# Set the cache location (optional)
cache=~/.npm

# Set the default package manager to use
# package-lock=true

# Use legacy peer dependencies (if needed)
legacy-peer-deps=true